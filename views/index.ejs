<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <h1 class="title"><%=title%></h1>
    <a href="/new" class="go-to-new">New message</a>
    <div class="cards-container">
      <% board.forEach((brd) => { %>
      <div class="card">
        <h2 class="user"><%=brd.username%></h2>
        <h3 class="date"><%=brd.formattedDate%></h3>
        <h4 class="time"><%=brd.formattedTime%></h4>
        <p class="message"><%=brd.text%></p>
        <!-- Link to details with params/queries  -->
        <a href="/message?user=<%= encodeURIComponent(brd.username) %>&date=<%= encodeURIComponent(brd.formattedDate) %>&time=<%= encodeURIComponent(brd.formattedTime) %>&message=<%= encodeURIComponent(brd.text) %>" class="view-message-details">View message</a>
      </div>
      <%}) %>
    </div>
  </body>
</html>
